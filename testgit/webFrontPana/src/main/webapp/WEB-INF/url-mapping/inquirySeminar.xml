<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">
	<!-- 画面初期化 -->
	<bean id="inquirySeminarInitCommand"
		class="jp.co.transcosmos.dm3.webFront.inquirySeminar.command.InquirySeminarInitCommand"
		scope="prototype">
		<property name="mypageUserManage" ref="mypageUserManager" />
		<property name="mode" value="init" />
		<property name="autoFill" value="true" />
	</bean>

	<!-- 画面確認 -->
	<bean id="inquirySeminarConfirmCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryGeneral.command.InquiryGeneralConfirmCommand"
		scope="prototype">
	</bean>

	<!-- 完了画面 -->
	<bean id="inquirySeminarCompCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryGeneral.command.InquiryGeneralCompCommand"
		scope="prototype">
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="generalInquiryManager" ref="generalInquiryManager" />
		<property name="sendInquiryGeneralMail" ref="sendInquiryGeneralTemplate" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>
				<!-- 画面初期化 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/event/input/" />
					<property name="defaultCommandName" value="inquirySeminarInitCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquirySeminar/inquirySeminarInit.jsp" />
				</bean>

				<!-- 画面確認 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/event/confirm/" />
					<property name="defaultCommandName" value="inquirySeminarConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquirySeminar/inquirySeminarConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/inquirySeminar/inquirySeminarInit.jsp
							</prop>
						</props>
					</property>
				</bean>

				<!-- 完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/event/result/" />
					<property name="defaultCommandName" value="inquirySeminarCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquirySeminar/inquirySeminarCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/inquirySeminar/inquirySeminarInit.jsp
							</prop>
							<prop key="comp">/WEB-INF/jsp/front/inquirySeminar/inquirySeminarComp.jsp
							</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>
