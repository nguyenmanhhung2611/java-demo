    <property name="mailTemplateXml" value="/WEB-INF/mail/sendAssessmentInquiry.xml" />
    <property name="ozaccMailSender" ref="sendMail" />
  </bean>

  <!-- 汎用お問い合わせ受領時メールテンプレート -->
  <bean id="sendInquiryGeneralTemplate" class="jp.co.transcosmos.dm3.mail.ReplacingMail" scope="prototype">
    <property name="mailTemplateXml" value="/WEB-INF/mail/sendInquiryGeneral.xml" />
    <property name="ozaccMailSender" ref="sendMail" />
  </bean>

  <!-- 物件問合せ受領時通知メールテンプレート -->
