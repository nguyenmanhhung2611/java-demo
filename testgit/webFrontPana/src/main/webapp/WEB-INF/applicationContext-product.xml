  <property name="mailTemplateXml" value="/WEB-INF/mail/sendInquiryHousing.xml"/>
  <property name="ozaccMailSender" ref="sendMail"/>
  </bean>

  <!-- 新規会員登録時（フロント）（顧客）メールテンプレート -->
