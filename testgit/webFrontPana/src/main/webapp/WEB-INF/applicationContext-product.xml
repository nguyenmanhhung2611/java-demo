    <property name="mailTemplateXml" value="/WEB-INF/mail/sendRequestDeleteMansion.xml"/>
    <property name="ozaccMailSender" ref="sendMail"/>
  </bean>
  <bean id="sendRequestDeleteHouse" class="jp.co.transcosmos.dm3.mail.ReplacingMail" scope="prototype">
