<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- 物件詳細情報編集画面 -->
	<bean id="housingdtlEditCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingdtl.command.HousingdtlEditCommand"
		scope="prototype">
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="panaFileUtil" ref="fileUtil" />
		<property name="mode" value="edit" />
	</bean>

	<!-- 物件詳細情報編集画面へ戻る -->
	<bean id="housingdtlEditCommandBack"
		class="jp.co.transcosmos.dm3.webAdmin.housingdtl.command.HousingdtlEditCommand"
		scope="prototype">
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="panaFileUtil" ref="fileUtil" />
		<property name="mode" value="editBack" />
	</bean>


	<!-- 物件詳細情報編集確認画面 -->
	<bean id="housingdtlConfirmCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingdtl.command.HousingdtlConfirmCommand"
		scope="prototype">
		<property name="commonParameters" ref="commonParameters" />
		<property name="reformManager" ref="reformManager" />
		<property name="imgUtils" ref="imgUtils" />
		<property name="panaFileUtil" ref="fileUtil" />
	</bean>


	<!-- 物件詳細情報編集完了画面 -->
	<bean id="housingdtlCompCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingdtl.command.HousingdtlCompCommand"
		scope="prototype">
		<property name="buildingManager" ref="buildingManager" />
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="imgUtils" ref="imgUtils" />
		<property name="mode" value="update" />
	</bean>


	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- 物件詳細情報編集画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/dtl/input/" />
					<property name="defaultCommandName" value="housingdtlEditCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingdtl/HousingdtlUpdInput.jsp" />
				</bean>

				<!-- 物件詳細情報編集画面へ戻る -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/dtl/editBack/" />
					<property name="defaultCommandName" value="housingdtlEditCommandBack" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingdtl/HousingdtlUpdInput.jsp" />
				</bean>


				<!-- 物件詳細情報編集確認画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/dtl/confirm/" />
					<property name="defaultCommandName" value="housingdtlConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingdtl/HousingdtlUpdConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/admin/housingdtl/HousingdtlUpdInput.jsp
							</prop>
						</props>
					</property>
				</bean>


				<!-- 物件詳細情報編集完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/dtl/result/" />
					<property name="defaultCommandName" value="housingdtlCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingdtl/HousingdtlCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/admin/housingdtl/HousingdtlUpdInput.jsp
							</prop>
							<prop key="comp">/WEB-INF/jsp/admin/housingdtl/HousingdtlComp.jsp
							</prop>
						</props>
					</property>
				</bean>

			</list>
		</property>
	</bean>
</beans>
