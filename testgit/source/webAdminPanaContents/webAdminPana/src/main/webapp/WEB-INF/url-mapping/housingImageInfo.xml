<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- 物件画像情報編集画面 -->
	<bean id="housingImageInfoInputCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingImageInfo.command.HousingImageInfoInputCommand"
		scope="prototype">
		<property name="fileUtil" ref="fileUtil"/>
        <property name="commonParameters" ref="commonParameters"/>
        <property name="panaHousingManager" ref="panaHousingManager" />
	</bean>

	<!-- 物件画像情報アップロード -->
	<bean id="housingImageInfoInsertCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingImageInfo.command.HousingImageInfoConfirmCommand"
		scope="prototype">
		<property name="fileUtil" ref="fileUtil"/>
        <property name="commonParameters" ref="commonParameters"/>
        <property name="panaHousingManager" ref="panaHousingManager" />
	</bean>

	<!-- 物件画像情報アップロード編集確認 -->
	<bean id="housingImageInfoCompCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingImageInfo.command.HousingImageInfoCompCommand"
		scope="prototype">
        <property name="panaHousingManager" ref="panaHousingManager" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>
				<!-- 物件画像情報編集画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/image/input/" />
					<property name="defaultCommandName" value="housingImageInfoInputCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingImageInfo/HousingImageInfoAddInput.jsp" />
				</bean>

				<!-- 物件画像情報編集新規入力確認画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/image/confirm/" />
					<property name="defaultCommandName" value="housingImageInfoInsertCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingImageInfo/HousingImageInfoAddConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="validationError">/WEB-INF/jsp/admin/housingImageInfo/HousingImageInfoAddInput.jsp
							</prop>
						</props>
					</property>
				</bean>

				<!-- 物件画像情報アップロード編集確認 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/image/result/" />
					<property name="defaultCommandName" value="housingImageInfoCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingImageInfo/HousingImageInfoCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="validationError">/WEB-INF/jsp/admin/housingImageInfo/HousingImageInfoAddInput.jsp
							</prop>
							<prop key="comp">/WEB-INF/jsp/admin/housingImageInfo/HousingImageInfoComp.jsp
							</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
