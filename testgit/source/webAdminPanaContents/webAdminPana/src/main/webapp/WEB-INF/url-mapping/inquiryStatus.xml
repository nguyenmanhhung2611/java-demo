<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- お問合せステータス編集画面 -->
	<bean id="inquiryStatusUpdInputCommand"
		class="jp.co.transcosmos.dm3.webAdmin.inquiryStatus.command.InquiryStatusInputCommand"
		scope="prototype">
		<property name="panaInquiryManager" ref="panaInquiryManager" />
		<property name="assessmentInquiryManager" ref="assessmentInquiryManager" />
		<property name="generalInquiryManager" ref="generalInquiryManager" />
	</bean>

	<!-- お問合せステータス情報変更入力確認画面 -->
	<bean id="inquiryStatusUpdConfirmCommand"
		class="jp.co.transcosmos.dm3.webAdmin.inquiryStatus.command.PanaInquiryStatusConfirmCommand"
		scope="prototype">
		<property name="panaInquiryManager" ref="panaInquiryManager" />
		<property name="assessmentInquiryManager" ref="assessmentInquiryManager" />
		<property name="generalInquiryManager" ref="generalInquiryManager" />
	</bean>

	<!-- お問合せステータス情報変更登録完了画面 -->
	<bean id="inquiryStatusUpdCompCommand"
		class="jp.co.transcosmos.dm3.webAdmin.inquiryStatus.command.PanaInquiryStatusCompCommand"
		scope="prototype">
		<property name="panaInquiryManager" ref="panaInquiryManager" />
		<property name="assessmentInquiryManager" ref="assessmentInquiryManager" />
		<property name="generalInquiryManager" ref="generalInquiryManager" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- お問合せステータス編集画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/inquiry/status/input/" />
					<property name="defaultCommandName" value="inquiryStatusUpdInputCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/inquiryStatus/InquiryStatusUpdInput.jsp" />
				</bean>

				<!-- お問合せ情報変更入力確認画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/inquiry/status/confirm/" />
					<property name="defaultCommandName" value="inquiryStatusUpdConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/inquiryStatus/InquiryStatusUpdConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/admin/inquiryStatus/InquiryStatusUpdInput.jsp
							</prop>
						</props>
					</property>
				</bean>

				<!-- お問合せ情報変更登録完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/inquiry/status/result/" />
					<property name="defaultCommandName" value="inquiryStatusUpdCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/inquiryStatus/InquiryStatusCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/admin/inquiryStatus/InquiryStatusUpdInput.jsp
							</prop>
							<prop key="comp">/WEB-INF/jsp/admin/inquiryStatus/InquiryStatusComp.jsp
							</prop>
						</props>
					</property>
				</bean>

			</list>
		</property>
	</bean>
</beans>
