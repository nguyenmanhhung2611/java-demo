<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

  <!-- 入力文字列長をカスタマイズする場合、この codeLookUp 定義に追加する。 -->

  <bean class="jp.co.transcosmos.dm3.lookup.CodeLookupList">
    <property name="codeLookupManager"><ref bean="codeLookupManager"/></property>
    <property name="lookups">
      <map>
        <entry key="inputLength">
          <props>
            <!-- マイページ会員入力 -->
            <prop key="mypage.input.memberLname">30</prop>
            <prop key="mypage.input.memberFname">30</prop>
            <prop key="mypage.input.memberLnameKana">30</prop>
            <prop key="mypage.input.memberFnameKana">30</prop>
            <!-- マイページ会員検索 -->
            <prop key="mypage.search.keyMemberLname">30</prop>
            <prop key="mypage.search.keyMemberFname">30</prop>
            <prop key="mypage.search.keyMemberLnameKana">30</prop>
            <prop key="mypage.search.keyMemberFnameKana">30</prop>

          </props>
        </entry>
      </map>
    </property>
  </bean>

</beans>
