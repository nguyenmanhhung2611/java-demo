<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- リフォーム画像編集初期化 -->
	<bean id="reformImgEditCommand"
		class="jp.co.transcosmos.dm3.webAdmin.reformImg.command.ReformImgInputCommand"
		scope="prototype">
		<property name="fileUtil" ref="fileUtil"/>
		<property name="commonParameters" ref="commonParameters"/>
		<property name="reformManager" ref="reformManager" />
	</bean>

	<!-- リフォーム画像新規入力画面 -->
	<bean id="reformImgUploadConfirmCommand"
		class="jp.co.transcosmos.dm3.webAdmin.reformImg.command.ReformImgConfirmCommand"
		scope="prototype">
		<property name="fileUtil" ref="fileUtil"/>
		<property name="commonParameters" ref="commonParameters"/>
        <property name="reformManager" ref="reformManager" />
	</bean>

	<!-- リフォーム画像編集完了 -->
	<bean id="reformImgEditCompCommand"
		class="jp.co.transcosmos.dm3.webAdmin.reformImg.command.ReformImgCompCommand"
		scope="prototype">
		<property name="reformManager" ref="reformManager" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>
				<!-- リフォーム画像情報編集画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/reform/image/input/" />
					<property name="defaultCommandName" value="reformImgEditCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/reformImg/ReformImgEdit.jsp" />
				</bean>

				<!-- リフォーム画像情報編集新規入力確認画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/reform/image/confirm/" />
					<property name="defaultCommandName" value="reformImgUploadConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/reformImg/ReformImgEditConfirm.jsp" />

					<property name="namedViews">
						<props>
							<prop key="validationError">/WEB-INF/jsp/admin/reformImg/ReformImgEdit.jsp
							</prop>
						</props>
					</property>
				</bean>

				<!-- リフォーム画像編集完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/reform/image/result/" />
					<property name="defaultCommandName" value="reformImgEditCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/reformImg/ReformImgCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="validationError">/WEB-INF/jsp/admin/reformImg/ReformImgEdit.jsp
							</prop>
							<prop key="comp">/WEB-INF/jsp/admin/reformImg/ReformImgComp.jsp
							</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
