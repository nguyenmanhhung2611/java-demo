<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- 管理者用設備情報編集画面 -->
	<bean id="equipDtlEditCommand"
		class="jp.co.transcosmos.dm3.webAdmin.equipDtl.command.EquipDtlEditCommand"
		scope="prototype">
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="mode" value="edit" />
	</bean>

	<!-- 管理者用設備情報編集画面へ戻る -->
	<bean id="equipDtlEditCommandBack"
		class="jp.co.transcosmos.dm3.webAdmin.equipDtl.command.EquipDtlEditCommand"
		scope="prototype">
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="mode" value="editBack" />
	</bean>

	<!-- 管理者用設備情報編集確認画面 -->
	<bean id="equipDtlConfirmCommand"
		class="jp.co.transcosmos.dm3.webAdmin.equipDtl.command.EquipDtlConfirmCommand"
		scope="prototype">
	</bean>

	<!-- 管理者用設備情報編集完了画面 -->
	<bean id="equipDtlCompCommand"
		class="jp.co.transcosmos.dm3.webAdmin.equipDtl.command.EquipDtlCompCommand"
		scope="prototype">
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="mode" value="update" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- 管理者用設備情報編集画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/equip/input/" />
					<property name="defaultCommandName" value="equipDtlEditCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/equipDtl/EquipDtlUpdInput.jsp" />
				</bean>

				<!-- 管理者用設備情報編集画面へ戻る -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/equip/back/" />
					<property name="defaultCommandName" value="equipDtlEditCommandBack" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/equipDtl/EquipDtlUpdInput.jsp" />
				</bean>

				<!-- 管理者用設備情報編集確認画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/equip/confirm/" />
					<property name="defaultCommandName" value="equipDtlConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/equipDtl/EquipDtlUpdConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/admin/equipDtl/EquipDtlUpdInput.jsp
							</prop>
						</props>
					</property>
				</bean>

				<!-- 管理者用設備情報編集完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/equip/result/" />
					<property name="defaultCommandName" value="equipDtlCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/equipDtl/EquipDtlCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/admin/equipDtl/EquipDtlUpdInput.jsp
							</prop>
							<prop key="comp">/WEB-INF/jsp/admin/equipDtl/EquipDtlComp.jsp
							</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
