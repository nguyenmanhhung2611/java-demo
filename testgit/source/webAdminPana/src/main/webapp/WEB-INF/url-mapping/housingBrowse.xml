<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- 物件閲覧（編集） -->
	<bean id="housingBrowseUpdInputCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingBrowse.command.HousingBrowseUpdateCommand"
		scope="prototype">
		<property name="panaHousingManager" ref="panaHousingManager"/>
		<property name="commonParameters" ref="commonParameters"/>
		<property name="mypageUserManager" ref="mypageUserManager"/>
		<property name="reformManager" ref="reformManager"/>
		<property name="codeLookupManager" ref="codeLookupManager"/>
		<property name="fileUtil" ref="fileUtil"/>
	</bean>

	<!-- リフォーム情報削除 -->
	<bean id="housingBrowseReformPlanDelCommand"
		class="jp.co.transcosmos.dm3.webAdmin.housingBrowse.command.HousingBrowseDelReformPlanCommand"
		scope="prototype">
		<property name="reformManager" ref="reformManager"/>
		<property name="panaHousingManager" ref="panaHousingManager"/>
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>
				<!-- 物件閲覧（編集） -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/detail/###sysHousingCd###/" />
					<property name="defaultCommandName" value="housingBrowseUpdInputCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/admin/housingBrowse/BrowseUpdInput.jsp" />
				</bean>

				<!-- リフォーム情報削除 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/top/housing/detail/delete/" />
					<property name="defaultCommandName" value="housingBrowseReformPlanDelCommand" />
					<property name="defaultViewName" value="/WEB-INF/jsp/admin/housingBrowse/ReformPlanDeleteCompRedirect.jsp" />
				</bean>
			</list>
		</property>
	</bean>
</beans>
