<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

  <!-- 会員情報の定数管理 -->
  <bean class="jp.co.transcosmos.dm3.lookup.CodeLookupList">
    <property name="codeLookupManager"><ref bean="codeLookupManager"/></property>
    <property name="lookups">
      <map>
        <!-- 登録経路 -->
        <entry key="entryRoute">
          <list>
          	<value>000:全て</value>
          	<value>001:WEB</value>
          	<value>002:クラブパナソニック</value>
          	<value>003:共済会</value>
          	<value>004:パナソニックショップ</value>
          	<value>005:セミナー・イベント</value>
          </list>
        </entry>
        <!-- 流入経路 -->
        <entry key="refCd">
          <list>
            <value>001:AAA</value>
            <value>002:BBB</value>
            <value>003:CCC</value>
          </list>
        </entry>
        <!-- 居住形態 -->
        <entry key="residentFlg">
          <list>
            <value>0:賃貸</value>
            <value>1:持家</value>
          </list>
        </entry>
        <!-- メール配信 -->
        <entry key="mailSendFlg">
          <list>
          	<value>1:受け取る</value>
            <value>0:受け取らない</value>
          </list>
        </entry>
        <!-- 有効区分 -->
        <entry key="lockFlg">
          <list>
            <value>0:有効</value>
            <value>1:無効</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

</beans>
