<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

  <!-- お知らせ情報の定数管理 -->
  <bean class="jp.co.transcosmos.dm3.lookup.CodeLookupList">
    <property name="codeLookupManager"><ref bean="codeLookupManager"/></property>
    <property name="lookups">
      <map>
        <entry key="information_type">
          <list>
            <value>001:リクエスト</value>
            <value>002:会員限定</value>
            <value>003:お知らせ</value>
            <value>004:イベント</value>
            <value>005:緊急</value>
            <value>006:キャンペーン</value>
            <value>007:更新情報</value>
          </list>
        </entry>
        <entry key="information_dspFlg">
          <list>
            <value>1:全会員</value>
            <value>2:特定会員</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

</beans>
