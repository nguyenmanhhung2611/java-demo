<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- 物件お問い合わせ 入力画面 -->
	<bean id="inquiryHousingAddInputCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryHousing.command.InquiryHousingInputCommand"
		scope="prototype">
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="panaHousingManager" ref="panaHousingManager" />
		<property name="mypageUserManage" ref="mypageUserManager" />
		<property name="panaCommonManage" ref="panamCommonManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="HousingImageInfoDAO" ref="housingImageInfoDAO" />
		<property name="fileUtil" ref="fileUtil" />
	</bean>

	<!-- 住所取得 -->
	<bean id="getAddressHousingByZipCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryHousing.command.GetAddressByZipCommand"
		scope="prototype">
		<property name="panamCommonManager" ref="panamCommonManager" />
	</bean>

	<!-- 物件お問い合わせ 確認画面 -->
	<bean id="inquiryHousingAddConfirmCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryHousing.command.InquiryHousingConfirmCommand"
		scope="prototype">
		<property name="panaCommonManage" ref="panamCommonManager" />
		<property name="panaHousingManager" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="HousingImageInfoDAO" ref="housingImageInfoDAO" />
		<property name="fileUtil" ref="fileUtil" />
	</bean>

	<!-- 物件お問い合わせ 完了画面 -->
	<bean id="inquiryHousingAddCompCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryHousing.command.InquiryHousingCompCommand"
		scope="prototype">
		<property name="panaCommonManage" ref="panamCommonManager" />
		<property name="panaInquiryManager" ref="panaInquiryManager" />
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="sendInquiryHousingMail" ref="sendInquiryHousingMail" />
		<property name="panaHousingManager" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="HousingImageInfoDAO" ref="housingImageInfoDAO" />
		<property name="fileUtil" ref="fileUtil" />
	</bean>


	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- 物件お問い合わせ 入力画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/buy/inquiry/input/" />
					<property name="defaultCommandName" value="inquiryHousingAddInputCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquiryHousing/inquiryHousingAddInput.jsp" />
					<property name="namedViews">
						<props>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- 住所取得（insert） -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/buy/inquiry/zipToAddressHousing/" />
					<property name="defaultCommandName" value="getAddressHousingByZipCommand" />
					<property name="defaultViewName" value="json"/>
				</bean>

				<!-- 物件お問い合わせ 確認画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/buy/inquiry/confirm/" />
					<property name="defaultCommandName" value="inquiryHousingAddConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquiryHousing/inquiryHousingAddConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/inquiryHousing/inquiryHousingAddInput.jsp</prop>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- CSRF 対策用 token のチェックフィルター -->
<!-- フィルターの実行タイミングが固定できないので、global.xml へ移動
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/buy/inquiry/result/" />
					<property name="defaultCommandName" value="csrfChkFilter"/>
					<property name="filter" value="true"/>
				</bean>
-->
				<!-- 物件お問い合わせ 完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/buy/inquiry/result/" />
					<property name="defaultCommandName" value="inquiryHousingAddCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquiryHousing/inquiryHousingCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/inquiryHousing/inquiryHousingAddInput.jsp</prop>
							<prop key="comp">/WEB-INF/jsp/front/inquiryHousing/inquiryHousingComp.jsp</prop>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

			</list>
		</property>
	</bean>
</beans>
