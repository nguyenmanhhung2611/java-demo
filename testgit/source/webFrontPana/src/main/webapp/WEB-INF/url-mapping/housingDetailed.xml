<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- 物件詳細画面 -->
	<bean id="housingDetailedCommand"
		class="jp.co.transcosmos.dm3.webFront.housingDetailed.command.HousingDetailedCommand"
		scope="prototype">
		<property name="mode" value="detail" />
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="recentlyInfoManage" ref="recentlyInfoManage" />
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="panaFileUtil" ref="fileUtil" />
		<property name="panamCommonManager" ref="panamCommonManager" />
	</bean>

	<!-- 物件詳細画面 プラン表示あり -->
	<bean id="housingDetailedCommandReform"
		class="jp.co.transcosmos.dm3.webFront.housingDetailed.command.HousingDetailedCommand"
		scope="prototype">
		<property name="mode" value="reform" />
		<property name="panaHousingManage" ref="panaHousingManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="recentlyInfoManage" ref="recentlyInfoManage" />
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="panaFileUtil" ref="fileUtil" />
		<property name="panamCommonManager" ref="panamCommonManager" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- 物件詳細(中古マンション)画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/mansion/###prefCd###/detail/###sysHousingCd###/" />
					<property name="defaultCommandName" value="housingDetailedCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/housingDetailed/HousingDetailedInit.jsp" />
					<property name="namedViews">
						<props>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- 物件詳細(中古マンション)Map画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/mansion/###prefCd###/detail/###sysHousingCd###/map/" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/map/googleMap.jsp" />
				</bean>

				<!-- 物件詳細(中古戸建)画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/house/###prefCd###/detail/###sysHousingCd###/" />
					<property name="defaultCommandName" value="housingDetailedCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/housingDetailed/HousingDetailedInit.jsp" />
					<property name="namedViews">
						<props>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- 物件詳細(中古戸建)Map画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/house/###prefCd###/detail/###sysHousingCd###/map/" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/map/googleMap.jsp" />
				</bean>

				<!-- 物件詳細(建物付土地)画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/ground/###prefCd###/detail/###sysHousingCd###/" />
					<property name="defaultCommandName" value="housingDetailedCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/housingDetailed/HousingDetailedInit.jsp" />
					<property name="namedViews">
						<props>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- 物件詳細(建物付土地)Map画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/ground/###prefCd###/detail/###sysHousingCd###/map/" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/map/googleMap.jsp" />
				</bean>

				<!-- 物件詳細(中古マンション)画面 プラン表示あり -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/mansion/###prefCd###/detail/###sysHousingCd###/###sysReformCd###/" />
					<property name="defaultCommandName" value="housingDetailedCommandReform" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/housingDetailed/HousingDetailedInit.jsp" />
					<property name="namedViews">
						<props>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- 物件詳細(中古戸建)画面 プラン表示あり -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern"
						value="/buy/house/###prefCd###/detail/###sysHousingCd###/###sysReformCd###/" />
					<property name="defaultCommandName" value="housingDetailedCommandReform" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/housingDetailed/HousingDetailedInit.jsp" />
					<property name="namedViews">
						<props>
							<prop key="404">/WEB-INF/jsp/front/common/404.jsp</prop>
						</props>
					</property>
				</bean>

			</list>
		</property>
	</bean>
</beans>
