<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- お気に入り登録 -->
	<bean id="favoriteCommand"
		class="jp.co.transcosmos.dm3.webFront.favorite.command.FavoriteCommand"
		scope="prototype">
		<property name="panaFavoriteManager" ref="panaFavoriteManager" />
		<property name="housingStatusInfoDAO" ref="housingStatusInfoDAO" />
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="commonParameters" ref="commonParameters" />
	</bean>

	<!-- お気に入り物件一覧 -->
	<bean id="favoriteListCommand"
		class="jp.co.transcosmos.dm3.webFront.favorite.command.FavoriteListCommand"
		scope="prototype">
		<property name="panaFavoriteManager" ref="panaFavoriteManager" />
		<property name="commonParameters" ref="commonParameters" />
		<property name="panaHousingManager" ref="panaHousingManager" />
		<property name="HousingImageInfoDAO" ref="housingImageInfoDAO" />
		<property name="panaCommonManager" ref="panamCommonManager" />
		<property name="panaFileUtil" ref="fileUtil" />
		<property name="rowsPerPage" value="15" />
	</bean>

	<!-- お気に入り削除 -->
	<bean id="favoriteDeleteCommand"
		class="jp.co.transcosmos.dm3.webFront.favorite.command.FavoriteDeleteCommand"
		scope="prototype">
		<property name="panaFavoriteManager" ref="panaFavoriteManager" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- お気に入り登録 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/modal/favorite/###sysHousingCd###/" />
					<property name="defaultCommandName" value="favoriteCommand" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/favorite/favorite.jsp" />
				</bean>

				<!-- お気に入り物件一覧 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/mypage/favorite/" />
					<property name="defaultCommandName" value="favoriteListCommand" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/favorite/favoriteList.jsp" />
				</bean>

				<!-- CSRF 対策用 token のチェックフィルター -->
<!-- フィルターの実行タイミングが固定できないので、global.xml へ移動
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/modal/delete/" />
					<property name="defaultCommandName" value="csrfChkFilter"/>
					<property name="filter" value="true"/>
				</bean>
-->

				<!-- お気に入り削除 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/modal/delete/" />
					<property name="defaultCommandName" value="favoriteDeleteCommand" />
					<property name="defaultViewName" value="json" />
				</bean>

				<!-- お気に入り削除fancybox -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/mypage/favorite/delete/" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/favorite/favoriteDelete.jsp" />
				</bean>
			</list>
		</property>
	</bean>
</beans>
