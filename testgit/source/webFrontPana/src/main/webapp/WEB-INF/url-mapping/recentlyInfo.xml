<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- 最近見た物件一覧画面 -->
	<bean id="recentlyInfoCommand"
		class="jp.co.transcosmos.dm3.webFront.recentlyInfo.command.RecentlyInfoCommand"
		scope="prototype">
		<property name="commonParameters" ref="commonParameters" />
		<property name="recentlyInfoManage" ref="recentlyInfoManage" />
		<property name="HousingImageInfoDAO" ref="housingImageInfoDAO" />
		<property name="fileUtil" ref="fileUtil" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>

				<!-- 最近見た物件一覧画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/history/" />
					<property name="defaultCommandName" value="recentlyInfoCommand" />
					<property name="defaultViewName" value="/WEB-INF/jsp/front/recentlyInfo/recentlyInfo.jsp" />
				</bean>
			</list>
		</property>
	</bean>
</beans>
