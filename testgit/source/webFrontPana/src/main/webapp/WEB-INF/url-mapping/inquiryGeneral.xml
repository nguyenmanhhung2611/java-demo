<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">
	<!-- 画面初期化 -->
	<bean id="inquiryGeneralInitCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryGeneral.command.InquiryGeneralInitCommand"
		scope="prototype">
		<property name="mypageUserManage" ref="mypageUserManager" />
		<property name="mode" value="init" />
	</bean>

 	<!-- 画面確認 -->
	<bean id="inquiryGeneralConfirmCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryGeneral.command.InquiryGeneralConfirmCommand"
		scope="prototype">
	</bean>

 	<!-- 完了画面 -->
	<bean id="inquiryGeneralCompCommand"
		class="jp.co.transcosmos.dm3.webFront.inquiryGeneral.command.InquiryGeneralCompCommand"
		scope="prototype">
		<property name="codeLookupManager" ref="codeLookupManager" />
		<property name="generalInquiryManager" ref="generalInquiryManager" />
		<property name="sendInquiryGeneralMail" ref="sendInquiryGeneralTemplate" />
	</bean>

	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>
				<!-- 画面初期化 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/inquiry/input/" />
					<property name="defaultCommandName" value="inquiryGeneralInitCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquiryGeneral/inquiryGeneralInit.jsp" />
				</bean>

				<!-- 画面確認 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/inquiry/confirm/" />
					<property name="defaultCommandName" value="inquiryGeneralConfirmCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquiryGeneral/inquiryGeneralConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/inquiryGeneral/inquiryGeneralInit.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- CSRF 対策用 token のチェックフィルター -->
<!-- フィルターの実行タイミングが固定できないので、global.xml へ移動
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/inquiry/result/" />
					<property name="defaultCommandName" value="csrfChkFilter"/>
					<property name="filter" value="true"/>
				</bean>
-->

				<!-- 完了画面 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/inquiry/result/" />
					<property name="defaultCommandName" value="inquiryGeneralCompCommand" />
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/inquiryGeneral/inquiryGeneralCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/inquiryGeneral/inquiryGeneralInit.jsp</prop>
							<prop key="comp">/WEB-INF/jsp/front/inquiryGeneral/inquiryGeneralComp.jsp</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>
