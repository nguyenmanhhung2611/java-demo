<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- 査定申込 -->
	<bean id="assessmentInputCommand"
		class="jp.co.transcosmos.dm3.webFront.assessment.command.AssessmentInputCommand"
		scope="prototype">
		<property name="panamCommonManager" ref="panamCommonManager" />
		<property name="mypageUserManage" ref="mypageUserManager" />
	</bean>

	<!-- 住所検索 -->
	<bean id="assessmentConfirmCommand"
		class="jp.co.transcosmos.dm3.webFront.assessment.command.AssessmentConfirmCommand"
		scope="prototype">
		<property name="panamCommonManager" ref="panamCommonManager" />
	</bean>

	<!-- 査定申込 確認 -->
	<bean id="getAddressByZipCommand"
		class="jp.co.transcosmos.dm3.webFront.assessment.command.GetAddressByZipCommand"
		scope="prototype">
		<property name="panamCommonManager" ref="panamCommonManager" />
	</bean>

	<!-- 査定申込 確認 -->
	<bean id="assessmentCompCommand"
		class="jp.co.transcosmos.dm3.webFront.assessment.command.AssessmentCompCommand"
		scope="prototype">
		<property name="panamCommonManager" ref="panamCommonManager" />
		<property name="assessmentInquiryManager" ref="assessmentInquiryManager" />
		<property name="sendAssessmentInquiryTemplate" ref="sendAssessmentInquiryTemplate"/>
	</bean>


	<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
		<property name="commandURLMapper" ref="commandURLMapper" />
		<property name="mappings">
			<list>
				<!-- 査定申込 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/sell/assessment/input/" />
					<property name="defaultCommandName" value="assessmentInputCommand"/>
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/assessment/AssessmentInput.jsp" />
				</bean>

				<!-- 住所検索 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/sell/assessment/zipToAddress/" />
					<property name="defaultCommandName" value="getAddressByZipCommand"/>
					<property name="defaultViewName" value="json"/>
				</bean>

				<!-- 査定申込 確認 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/sell/assessment/confirm/" />
					<property name="defaultCommandName" value="assessmentConfirmCommand"/>
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/assessment/AssessmentConfirm.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/assessment/AssessmentInput.jsp</prop>
						</props>
					</property>
				</bean>

				<!-- CSRF 対策用 token のチェックフィルター -->
<!-- フィルターの実行タイミングが固定できないので、global.xml へ移動
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/sell/assessment/result/" />
					<property name="defaultCommandName" value="csrfChkFilter"/>
					<property name="filter" value="true"/>
				</bean>
-->

				<!-- 査定申込 完了 -->
				<bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
					<property name="urlPattern" value="/sell/assessment/result/" />
					<property name="defaultCommandName" value="assessmentCompCommand"/>
					<property name="defaultViewName"
						value="/WEB-INF/jsp/front/assessment/AssessmentCompRedirect.jsp" />
					<property name="namedViews">
						<props>
							<prop key="input">/WEB-INF/jsp/front/assessment/AssessmentInput.jsp</prop>
							<prop key="comp">/WEB-INF/jsp/front/assessment/AssessmentComp.jsp</prop>
						</props>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
