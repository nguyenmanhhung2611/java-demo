<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="serv" version="3.0">
  <display-name>webAdminPana</display-name>

  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/log4j.xml</param-value>
  </context-param>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>webAdminPana.root</param-value>
  </context-param>
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>jp.co.transcosmos.dm3.spring.context.HostSwitchingSpringContext</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext_local.xml 
    			/WEB-INF/contexts/
    </param-value>
  </context-param>


  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>jp.co.transcosmos.dm3.foundation.LoggingHttpSessionListener</listener-class>
  </listener>


  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>jp.co.transcosmos.dm3.foundation.SetEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>BIGIPHttpsFilter</filter-name>
    <filter-class>jp.co.transcosmos.dm3.https.ImitateHttpsRequestFilter</filter-class>
  </filter>

  <filter>
    <filter-name>CookieSupportCheckFilter</filter-name>
    <filter-class>jp.co.transcosmos.dm3.supportcheck.CookieSupportCheckFilter</filter-class>
    <init-param>
      <param-name>noCookieSupportPage</param-name>
      <param-value>/error/cookie</param-value>
    </init-param>
    <init-param>
      <param-name>exceptionPatterns</param-name>
      <param-value>/error/*,/health_chk/</param-value>
    </init-param>
  </filter>


  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>BIGIPHttpsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>BIGIPHttpsFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CookieSupportCheckFilter</filter-name>
    <url-pattern>/top/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CookieSupportCheckFilter</filter-name>
    <url-pattern>/login/*</url-pattern>
  </filter-mapping>


  <servlet>
    <servlet-name>spring</servlet-name>
    <servlet-class>jp.co.transcosmos.dm3.servlet.PatternMatchingDispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextClass</param-name>
      <param-value>jp.co.transcosmos.dm3.spring.context.HostSwitchingSpringContext</param-value>
    </init-param>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/url-mapping /WEB-INF/code-lookup /WEB-INF/spring-servlet_local.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>error</servlet-name>
    <servlet-class>jp.co.transcosmos.dm3.error.ErrorServlet</servlet-class>
    <init-param>
      <param-name>errorPage</param-name>
      <param-value>/WEB-INF/jsp/admin/error/Error_System.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>optionBeans</param-name>
      <param-value>commonParameters</param-value>
    </init-param>
  </servlet>


  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>/top/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>/error/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>spring</servlet-name>
    <url-pattern>/health_chk/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
  	<welcome-file>index.html</welcome-file>
  	<welcome-file>index.htm</welcome-file>
  	<welcome-file>index.jsp</welcome-file>
  	<welcome-file>default.html</welcome-file>
  	<welcome-file>default.htm</welcome-file>
  	<welcome-file>default.jsp</welcome-file>
  </welcome-file-list>


  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsh</url-pattern>
    </jsp-property-group>
  </jsp-config>


  <error-page>
    <exception-type>jp.co.transcosmos.dm3.core.model.exception.NotFoundException</exception-type>
    <location>/WEB-INF/jsp/admin/common/NotFound.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error</location>
  </error-page>

</web-app>
