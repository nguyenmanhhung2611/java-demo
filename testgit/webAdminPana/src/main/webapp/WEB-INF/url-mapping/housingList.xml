<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="classpath:site.properties" />
  </bean>

  <!-- 物件検索・一覧画面の初期化 -->
  <bean id="housingListInitCommand" class="jp.co.transcosmos.dm3.webAdmin.housingList.command.HousingListInitCommand" scope="prototype">
    <property name="panamCommonManager" ref="panamCommonManager"/>
  </bean>

  <!-- 物件検索・一覧画面 -->
  <bean id="housingListCommand" class="jp.co.transcosmos.dm3.webAdmin.housingList.command.HousingListCommand" scope="prototype">
  	<property name="panaHousingManager" ref="panaHousingManager"/>
    <property name="panamCommonManager" ref="panamCommonManager"/>
    <property name="authLogging" ref="authLogging"/>
    <property name="rowsPerPage" value="50"/>
    <property name="visibleNavigationPageCount" value="10"/>
    <property name="mode" value="search" />
  </bean>

	<!-- 物件削除・一覧画面 -->
  <bean id="housingConfirmCommand" class="jp.co.transcosmos.dm3.webAdmin.housingList.command.HousingListCommand" scope="prototype">
  	<property name="panaHousingManager" ref="panaHousingManager"/>
    <property name="panamCommonManager" ref="panamCommonManager"/>
    <property name="authLogging" ref="authLogging"/>
    <property name="rowsPerPage" value="50"/>
    <property name="visibleNavigationPageCount" value="10"/>
    <property name="mode" value="delete" />
  </bean>

  <!-- CSV 出力 -->
  <bean id="housingCsvCommand" class="jp.co.transcosmos.dm3.webAdmin.housingList.command.HousingListCommand" scope="prototype">
    <property name="panaHousingManager" ref="panaHousingManager"/>
    <property name="panamCommonManager" ref="panamCommonManager"/>
    <property name="authLogging" ref="adminLogging"/>
    <property name="mode" value="csv" />
    <property name="rowsPerPage" value="50"/>
    <property name="visibleNavigationPageCount" value="10"/>
  </bean>

  <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
    <property name="commandURLMapper" ref="commandURLMapper"/>
    <property name="mappings">
      <list>
        <!-- 物件検索・一覧画面 -->
        <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
          <property name="urlPattern" value="/top/housing/list/"/>
          <property name="defaultCommandName" value="housingListInitCommand"/>
          <property name="namedCommands">
          <props>
          	<prop key="list">housingListCommand</prop>
          </props>
          </property>
          <property name="defaultViewName" value="/WEB-INF/jsp/admin/housingList/HousingList.jsp"/>
        </bean>

		<!-- 物件削除・一覧画面 -->
        <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
          <property name="urlPattern" value="/top/housing/delete/"/>
          <property name="defaultCommandName" value="housingConfirmCommand"/>
          <property name="defaultViewName" value="/WEB-INF/jsp/admin/housingList/HousingDeleteCompRedirect.jsp"/>
        </bean>

        <!-- CSV 出力 -->
        <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
          <property name="urlPattern" value="/top/housing/csv/"/>
          <property name="defaultCommandName" value="housingCsvCommand"/>
          <property name="namedViews">
            <props>
              <prop key="success">/WEB-INF/jsp/admin/housingList/HousingList.jsp</prop>
            </props>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>