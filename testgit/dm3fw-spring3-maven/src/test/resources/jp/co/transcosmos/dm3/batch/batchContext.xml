<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">
    
  <bean id="taskQueue" class="jp.co.transcosmos.dm3.batch.SimpleTaskDefinition">
    <property name="onCompletionExecuteMode" value="PARALLEL_NO_WAIT"/>
    <property name="onCompletionTasks">
      <list>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <ref bean="ocTest"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
      </list>
    </property>
  </bean>
  
  <bean id="ocTest" class="jp.co.transcosmos.dm3.batch.SimpleTaskDefinition">
    <property name="task"><bean class="jp.co.transcosmos.dm3.batch.JobOne"/></property>
    <property name="onCompletionExecuteMode" value="PARALLEL_WAIT"/>
    <property name="onCompletionTasks">
      <list>
        <bean class="jp.co.transcosmos.dm3.batch.JobTwo"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobTwo"/>
      </list>
    </property>
  </bean>
  

  <bean id="test2TaskQueue" class="jp.co.transcosmos.dm3.batch.SimpleTaskDefinition">
    <property name="onCompletionExecuteMode" value="PARALLEL_NO_WAIT"/>
    <property name="onCompletionTasks">
      <list>
        <!-- run the copy images and housing db operations in parallel -->
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <ref bean="test2Serial"/>
      </list>
    </property>
  </bean>
  
  <bean id="test2Serial" class="jp.co.transcosmos.dm3.batch.SimpleTaskDefinition">
    <property name="onCompletionExecuteMode" value="SERIAL"/>
    <property name="onCompletionTasks">
      <list>
        <ref bean="test2ParallelWait"/>
        <ref bean="test2ParallelWait2"/>
      </list>
    </property>
  </bean>
  
  <bean id="test2ParallelWait" class="jp.co.transcosmos.dm3.batch.SimpleTaskDefinition">
    <property name="onCompletionExecuteMode" value="PARALLEL_WAIT"/>
    <property name="onCompletionTasks">
      <list>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
      </list>
    </property>
  </bean>
  
  <bean id="test2ParallelWait2" class="jp.co.transcosmos.dm3.batch.SimpleTaskDefinition">
    <property name="onCompletionExecuteMode" value="PARALLEL_WAIT"/>
    <property name="onCompletionTasks">
      <list>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
        <bean class="jp.co.transcosmos.dm3.batch.JobOne"/>
      </list>
    </property>
  </bean>
    
  
</beans>