<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="classpath:site.properties" />
  </bean>

  <bean id="adminLogCsvConverter" class="jp.co.transcosmos.dm3.webAdmin.adminLog.CsvConverter">
    <property name="codeLookupManager" ref="codeLookupManager"/>
  </bean>

  <bean id="adminLogListCommand" class="jp.co.transcosmos.dm3.webAdmin.adminLog.command.AdminLogListCommand" scope="prototype">
  	<property name="adminLogManager" ref="adminLogManager" />
  </bean>
  <bean id="adminLogCsvCommand" class="jp.co.transcosmos.dm3.webAdmin.adminLog.command.AdminLogListCommand" scope="prototype">
  	<property name="mode" value="csv" />
	<property name="adminLogManager" ref="adminLogManager" />
  </bean>
  <bean id="adminLogCsvConfig" class="jp.co.transcosmos.dm3.csv.CsvConfig">
    <property name="fileName" value="adminLog_###yyyyMMdd###"/>
    <property name="headerColumns">
      <list>
        <value>日時</value>
        <value>ログインID</value>
        <value>ユーザー名</value>
        <value>機能名</value>
        <value>メッセージ</value>
      </list>
    </property>
    <property name="dbColumns">
      <list>
        <value>adminLog.insDate</value>
        <value>adminLoginInfo.loginId</value>
        <value>adminLoginInfo.userName</value>
        <value>adminLog.functionCd</value>
        <value>adminLog.msg</value>
      </list>
    </property>
    <property name="csvValueConverter" ref="adminLogCsvConverter"/>
    <property name="useBOM" value="true"/>
  </bean>
  <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMappingList">
    <property name="commandURLMapper" ref="commandURLMapper"/>
    <property name="mappings">
      <list>
        <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
          <property name="urlPattern" value="/top/adminlog/list/"/>
          <property name="defaultCommandName" value="adminLogListCommand" />
          <property name="defaultViewName" value="/WEB-INF/jsp/admin/adminLog/AdminLogList.jsp"/>
        </bean>
        <bean class="jp.co.transcosmos.dm3.servlet.URLCommandViewMapping">
          <property name="urlPattern" value="/top/adminlog/csv/"/>
          <property name="defaultCommandName" value="adminLogCsvCommand" />
          <property name="defaultViewName" value="/WEB-INF/jsp/admin/adminLog/AdminLogList.jsp"/>
          <property name="namedViews">
			<props>
				<prop key="success">csvh:adminLogCsvConfig</prop>
			</props>
		  </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
