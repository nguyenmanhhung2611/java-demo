<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="customerInheritanceParrent" class="ctcav.com.demo.inheritance.CustomerInheritance" abstract="true">
		<property name="type" value="1" />
		<property name="action" value="action 1" />
		<property name="country" value="country 1" />
	</bean>
	
	<bean id="customerInheritance" parent="customerInheritanceParrent" init-method="initMethod">
		<property name="action" value="action 2" />
		<property name="type" value="2" />
		<property name="country" value="country 2" />
	</bean>
	
</beans>